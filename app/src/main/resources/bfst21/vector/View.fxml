<?xml version="1.0" encoding="UTF-8"?>

<?import bfst21.vector.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<Scene fx:id="scene" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bfst21.vector.Controller">
    <root>
        <StackPane fx:id="stackPane" minHeight="480" minWidth="640">
            <MapCanvas fx:id="canvas" height="${stackPane.height}" onMouseDragged="#onMouseDragged" onMousePressed="#onMousePressed" onScroll="#onScroll" width="${stackPane.width}">
            </MapCanvas>
            <HBox fx:id="menuBarHBox" maxHeight="25" minHeight="25" minWidth="${scene.width}" StackPane.alignment="TOP_LEFT">
                <MenuBar fx:id="menuBar" minWidth="${menuBarHBox.width}">
                    <Menu text="File">
                        <MenuItem text="Load" />
                        <MenuItem text="Save" />
                    </Menu>
                    <Menu text="View">
                        <MenuItem fx:id="zoomIn" onAction="#zoomButtonClicked" text="Zoom in" />
                        <MenuItem onAction="#zoomButtonClicked" text="Zoom out" />
                    </Menu>
                    <Menu text="Accessibility">
                        <Menu text="Color modes">
                            <MenuItem fx:id="colorModeStandard" onAction="#changeColorMode" text="Standard" />
                            <MenuItem fx:id="colorModeBlackWhite" onAction="#changeColorMode" text="Black and White" />
                            <MenuItem fx:id="colorModeColorBlind" onAction="#changeColorMode" text="Colorblind" />
                        </Menu>
                    </Menu>
                </MenuBar>
            </HBox>
            <AnchorPane maxHeight="10" maxWidth="10" minHeight="10" minWidth="10" StackPane.alignment="TOP_LEFT">
                <padding><Insets bottom="8" left="8" top="8" /></padding>

                <VBox fx:id="searchAddressVbox" fillWidth="false" minWidth="175" style="-fx-background-color: #f6f6f6; -fx-border-color: red;" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <padding><Insets bottom="5" left="10" right="10" top="5" /></padding>
                    <Text style="-fx-font-size: 15" text="Search" />
                    <Text fx:id="startingPointText" managed="false" text="Starting point:" visible="false" />
                    <TextArea fx:id="startingPoint" minHeight="20" prefHeight="25" promptText="Choose an address..." wrapText="true" />
                    <HBox fx:id="expandAndSearchButtons" alignment="BASELINE_CENTER" style="-fx-padding: 10 5 5 5">
                        <Button fx:id="expand" onAction="#expandSearchView" text="Expand" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <ToolBar visible="false" HBox.hgrow="ALWAYS" />
                        <Button onAction="#searchAddressString" text="Search" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                    </HBox>
                    <VBox fx:id="getDestinationBox" managed="false" visible="false">
                        <Text text="Destination:" />
                        <TextArea fx:id="destinationPoint" minHeight="25" prefHeight="25" promptText="Choose a destination..." wrapText="true" />
                        <HBox alignment="BASELINE_CENTER" style="-fx-padding: 10 5 5 5">
                            <Button fx:id="collapse" onAction="#expandSearchView" text="Collapse" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                            <ToolBar visible="false" HBox.hgrow="ALWAYS" />
                            <Button onAction="#searchAddressString" text="Search" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                        </HBox>
                    </VBox>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
                </VBox>
            <StackPane.margin>
               <Insets top="30.0" />
            </StackPane.margin>
            </AnchorPane>
            <VBox fx:id="zoomBox" alignment="TOP_RIGHT" maxHeight="10" maxWidth="20" style="-fx-padding: 30 15 0 0;">
                <Text fx:id="zoomText" text="zoomText" />
            </VBox>
        </StackPane>
    </root>
</Scene>
