<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>


<AnchorPane xmlns="https://javafx.com/javafx"
            xmlns:fx="https://javafx.com/fxml"
            fx:controller="bfst21.view.controllers.NavigationBoxController"
            stylesheets="@../../styles/navigation_default.css">

    <VBox fx:id="searchBox" managed="false" styleClass="searchBoxes">

        <TextArea fx:id="addressArea"
                  promptText="Type an address..."
                  wrapText="true"
                  onKeyPressed="#typingCheck"/>

        <ScrollPane minWidth="250"
                    fitToWidth="true"
                    styleClass="scrollPane">

            <VBox fx:id="suggestions"
                  onKeyPressed="#typingCheck"
                  styleClass="suggestions">
            </VBox>
        </ScrollPane>

        <HBox alignment="BASELINE_CENTER" prefWidth="198.0" styleClass="hboxForButtons">
            <Button fx:id="navigateButton"
                    onAction="#expandSearchView"
                    text="Navigate"
                    GridPane.columnIndex="0"
                    GridPane.rowIndex="0"/>

            <ToolBar visible="false" HBox.hgrow="ALWAYS"/>

            <Button fx:id="searchButton"
                    onAction="#searchSingleAddress"
                    text="Search"
                    GridPane.columnIndex="2"
                    GridPane.rowIndex="0"/>
        </HBox>
    </VBox>

    <VBox fx:id="routeBox"
          minWidth="250"
          visible="false"
          managed="false"
          styleClass="searchBoxes">

        <GridPane hgap="2">
            <VBox GridPane.columnIndex="1"
                  GridPane.rowIndex="1"
                  GridPane.rowSpan="3"
                  spacing="5">
                <TextArea fx:id="startingPoint"
                          promptText="From:"
                          onKeyPressed="#typingCheck"
                          styleClass="searchArea"/>

                <ScrollPane minWidth="200"
                            fitToWidth="true"
                            styleClass="scrollPane">

                    <VBox fx:id="startingSuggestions"
                          onKeyPressed="#typingCheck"
                          styleClass="suggestions">
                    </VBox>
                </ScrollPane>

                <TextArea fx:id="destinationPoint"
                          promptText="To:"
                          onKeyPressed="#typingCheck"
                          styleClass="searchArea"/>

                <ScrollPane minWidth="200"
                            fitToWidth="true"
                            styleClass="scrollPane">
                    <VBox fx:id="destinationSuggestions"
                          onKeyPressed="#typingCheck"
                          styleClass="suggestions">
                    </VBox>
                </ScrollPane>
            </VBox>

            <Button fx:id="switchButton"
                    GridPane.columnIndex="2"
                    GridPane.rowIndex="1"
                    GridPane.rowSpan="3"
                    onAction="#switchText">
                <graphic>
                    <ImageView fitWidth="10.0"
                               preserveRatio="true"
                               styleClass="imageView">
                        <Image url="/arrowPic.png"/>
                    </ImageView>
                </graphic>
            </Button>
        </GridPane>

        <HBox fx:id="transportModeHBox">
            <ToggleButton fx:id="CAR"
                          onAction="#transportationButtonPushed"
                          selected="true">
                <graphic>
                    <ImageView fitHeight="32.0"
                               preserveRatio="true"
                               styleClass="imageView">
                        <Image url="/carPic.png"/>
                    </ImageView>
                </graphic>

                <toggleGroup>
                    <ToggleGroup fx:id="group"/>
                </toggleGroup>
            </ToggleButton>

            <ToggleButton fx:id="BIKE"
                          onAction="#transportationButtonPushed">
                <graphic>
                    <ImageView fitHeight="32.0"
                               preserveRatio="true"
                               styleClass="imageView">
                        <Image url="/bikePic.png"/>
                    </ImageView>
                </graphic>

                <toggleGroup>
                    <fx:reference source="group"/>
                </toggleGroup>
            </ToggleButton>

            <ToggleButton fx:id="WALK"
                          onAction="#transportationButtonPushed">
                <graphic>
                    <ImageView fitHeight="32.0"
                               preserveRatio="true"
                               styleClass="imageView">
                        <Image url="/walkPic.png"/>
                    </ImageView>
                </graphic>

                <toggleGroup>
                    <fx:reference source="group"/>
                </toggleGroup>
            </ToggleButton>
        </HBox>

        <HBox alignment="BASELINE_CENTER" styleClass="hboxForButtons">
            <Button onAction="#minimizeSearchView"
                    text="Minimize" GridPane.columnIndex="0"
                    GridPane.rowIndex="0"/>

            <ToolBar visible="false" HBox.hgrow="ALWAYS"/>

            <Button fx:id="searchButtonExpanded"
                    onAction="#searchNavigationAddresses"
                    text="Search"
                    GridPane.columnIndex="2"
                    GridPane.rowIndex="0"/>
        </HBox>
    </VBox>
</AnchorPane>